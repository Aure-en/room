      allow read: if true;
    }
    
    match /navigation/{navigation} {
      allow write: if request.auth != null && request.auth.uid == '4VkuLKG8OMbw6fkOW0RvHalbcy62'
      allow read: if true;
    }
    
    match /designs/{design} {
      allow write: if request.auth != null && request.auth.uid == '4VkuLKG8OMbw6fkOW0RvHalbcy62'
      allow read: if true;
    }
    
    match /favorites/{userId} {
